@model Project.Service.Note
@{
    ViewBag.Title = "Delete Note";
}
<h3>@ViewBag.Title</h3>
@if (ViewBag.Warning != null)
{
    <div class="alert alert-danger" role="alert">
        Are you sure you want to delete this note?
    </div>
}

<div class="row">
    <div class="col-md-2 strong">Created</div>
    <div class="col-md-10">@ViewBag.Note.CreatedOn</div>
</div>
<div class="row">
    <div class="col-md-2 strong">Updated</div>
    <div class="col-md-10">@ViewBag.Note.UpdatedOn</div>
</div>
<div class="row">
    <div class="col-md-2 strong">Note</div>
    <div class="col-md-10">@ViewBag.Note.Text</div>
</div>
<div class="row">
    <div class="col-md-2 strong">Author</div>
    <div class="col-md-10">@ViewBag.Note.Author</div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}
